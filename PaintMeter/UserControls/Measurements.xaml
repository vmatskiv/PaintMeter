<UserControl x:Class="PaintMeter.UserControls.Measurements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintMeter.UserControls"
        mc:Ignorable="d"
         x:Name="parent"
        d:DesignHeight="200" d:DesignWidth="250">
    <Viewbox>
        <Grid >
            <Grid.DataContext>
                <Binding Source="{StaticResource Locator}" />
            </Grid.DataContext>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Left"
                       FontWeight="Bold"
                       Text="Pobrane pomiary:"/>
            <DataGrid Grid.Row="1"
                      Width="350"
                      Height="150"
                      IsReadOnly="True"
                      ItemsSource="{Binding Main.ItemSourceMeasurementsDataGrid}"
                      AutoGeneratingColumn="OnAutoGeneratingColumn"/>
        </Grid>
    </Viewbox>
</UserControl>
